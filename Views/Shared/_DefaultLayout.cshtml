<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/CSS/DefaultStyles.css"/>
</head>
<body>
    <header>
        @RenderSection("Header", false)
    </header>
    <div class="container-fluid">
    <nav class="navbar navbar-dark bg-dark Purple">
        <div class="row">
            <div class="col-xs-12 col-md-4 col-lg-3 Red">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
            </div>
            <div class="col-xs-12 col-md-4 col-lg-3 nav-item">
                @Html.ActionLink("About", "Index", "About", null, new { @class = "nav-link" })
            </div>
            <div class="col-xs-12 col-md-4 col-lg-3 nav-item">
                @Html.ActionLink("Contact", "Index", "Contact", null, new { @class = "nav-link" })
            </div>
        </div>
    </nav>
    </div>
        <main>
            @RenderBody()
            <p class="Red">Some Text in Red</p>
            <p class="Purple">Some Text in Green</p>
            <p class="Green">Some Text in Purple</p>
            <p class="Yellow">Some Text in Gold would look good on black background</p>
        </main>
       <footer ><div class="Footer container-fluid">Justin Urbany Start of My Website</div></footer>
</body>
</html>
